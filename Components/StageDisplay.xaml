<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_tower_climber.Components.StageDisplay">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <VerticalStackLayout Spacing="1"
                             Grid.Row="1"
                             Grid.Column="0"
                             Margin="10">
            <Label HorizontalTextAlignment="Center">Floor: 50/100</Label>
            <ProgressBar Progress="0.5"
                         HeightRequest="30"
                         WidthRequest="100" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="1"
                             Grid.Row="1"
                             Grid.Column="2"
                             Margin="10">
            <Label HorizontalTextAlignment="Center">Monster: 7/15</Label>
            <ProgressBar Progress="0.47"
                         HeightRequest="30"
                         WidthRequest="100" />
        </VerticalStackLayout>
    </Grid>
</ContentView>
